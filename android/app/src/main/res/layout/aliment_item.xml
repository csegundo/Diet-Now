<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RemoveAliment"
    android:layout_width="match_parent"
    android:layout_height="105dp">

    <TextView
        android:id="@+id/barcodeAliment"
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="id"
        android:visibility="gone" />


    <EditText
        android:id="@+id/AlimentName"
        android:layout_width="196dp"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:singleLine="true"
        android:text="Titulo"
        android:textSize="13dp" />

    <EditText
        android:id="@+id/AlimentGrams"
        android:layout_width="61dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="45dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:inputType="number"
        android:text="Grams"
        android:textSize="13dp" />

    <EditText
        android:id="@+id/AlimentKal"
        android:layout_width="61dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="75dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:text="kcal"
        android:textSize="13dp" />

    <ImageButton
        android:id="@+id/deleteAlimentBtn"
        android:background="@color/purple_500"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="35dp"
        app:srcCompat="@drawable/ic_delete" />

    <ImageButton
        android:id="@+id/viewAlimentDetails"
        android:background="@color/purple_500"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="290dp"
        android:layout_marginTop="35dp"
        app:srcCompat="@drawable/ic_view" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="71dp"
        android:layout_marginTop="80dp"
        android:text="kcal/100gr" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="28dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="71dp"
        android:layout_marginTop="50dp"
        android:text="gr" />

    <ImageButton
        android:id="@+id/EditGrButton"
        android:background="@color/purple_500"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="35dp"
        app:srcCompat="@drawable/ic_baseline_save_as_16" />


</androidx.cardview.widget.CardView>