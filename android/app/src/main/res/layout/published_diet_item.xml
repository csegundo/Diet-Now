<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="133dp">

    <TextView
        android:id="@+id/PDietId"
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="id"
        android:visibility="gone" />

    <TextView
        android:id="@+id/PDietTitulo"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="sans-serif-black"
        android:text="Titulo"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/PDietDesc"
        android:layout_width="247dp"
        android:layout_height="61dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="10dp"
        android:inputType="textMultiLine"
        android:text="Descripcion" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="130dp"
        android:background="?android:attr/listDivider"
        android:foreground="@color/purple_700"
        android:visibility="visible" />

    <Button
        android:id="@+id/PDietShowBtn"
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="5dp"
        android:text="@string/view_diet"
        android:textSize="10dp"
        app:srcCompat="@android:drawable/ic_menu_edit" />

    <TextView
        android:id="@+id/pNlikesDiet"
        android:layout_width="35dp"
        android:layout_height="20dp"
        android:layout_marginLeft="275dp"
        android:layout_marginTop="55dp"
        android:text="TextView"
        android:textDirection="rtl" />

    <ImageView
        android:id="@+id/PlikeDiet"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="315dp"
        android:layout_marginTop="55dp"
        app:srcCompat="@drawable/ic_like_24" />


    <TextView
        android:id="@+id/pNVisitDiet"
        android:layout_width="35dp"
        android:layout_height="20dp"
        android:layout_marginLeft="340dp"
        android:layout_marginTop="55dp"
        android:text="TextView"
        android:textDirection="rtl" />

    <ImageView
        android:id="@+id/PvisitDiet"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="380dp"
        android:layout_marginTop="55dp"
        android:background="#7C7373"
        app:srcCompat="@drawable/ic_view" />

    <TextView
        android:id="@+id/dietItemStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="75dp"
        android:text="status"
        android:textStyle="bold" />


</androidx.cardview.widget.CardView>